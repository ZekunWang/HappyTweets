<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/icons">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/item_view_padding"
        android:background="@drawable/item_view_background"
        android:id="@+id/rlFakeBar">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_window_close"
            android:layout_alignTop="@+id/ivProfile"
            android:layout_alignBottom="@+id/ivProfile"
            android:id="@+id/ivNavigationUp"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/item_img_profile_margin"
            tools:background="@color/primary"
            android:id="@+id/ivProfile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/item_text_username"
            android:textSize="@dimen/item_text_username"
            tools:background="#ffff00"
            tools:text='username'
            android:id="@+id/tvUsername"
            android:layout_alignTop="@+id/ivProfile"
            android:layout_toLeftOf="@+id/ivProfile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivProfile"
            android:singleLine="true"
            android:textColor="@color/item_text_relative_time"
            android:textSize="@dimen/item_text_username"
            tools:text='screenname'
            tools:background="#00ffff"
            android:id="@+id/tvScreenName"
            android:gravity="center_vertical"
            android:layout_below="@+id/tvUsername"
            android:layout_toLeftOf="@+id/ivProfile"/>/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/tvAvailableChars"
        android:text="140"
        android:textColor="@color/item_text_content"
        tools:background="#00ffff"
        android:layout_alignTop="@+id/btnCompose"
        android:layout_alignBottom="@+id/btnCompose"
        android:layout_toLeftOf="@+id/btnCompose"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:padding="@dimen/item_view_padding"
        android:ems="10"
        android:gravity="top"
        android:lines="6"
        tools:text="mmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm"
        android:hint="What's happening?"
        android:textSize="@dimen/item_text_username"
        android:textColor="@color/item_text_content"
        android:background="@drawable/item_view_background"
        android:id="@+id/etContent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvNotice"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_view_padding"
        android:background="@drawable/item_view_background"
        android:id="@+id/tvNotice"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:text="Replying to "
        android:drawableLeft="@drawable/ic_arrow_down"
        android:layout_below="@id/rlFakeBar"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/item_view_padding"
        android:text="@string/compose_tweet"
        android:textAllCaps="false"
        android:id="@+id/btnCompose"
        android:textColor="@color/icons"
        android:background="@drawable/button_background"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etContent"/>
</RelativeLayout>
