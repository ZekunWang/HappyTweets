<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zekunwang.happytweets"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- for SQLite -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="TwitterClient.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.zekunwang.happytweets.models.Tweet,                 com.zekunwang.happytweets.models.User, com.zekunwang.happytweets.models.Medium" />

        <activity
            android:name="com.zekunwang.happytweets.activities.LoginActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="SimpleTweets"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.TimelineActivity"
            android:label="@string/title_activity_timeline"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeDrawer"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:launchMode="singleTop"
            android:parentActivityName="com.zekunwang.happytweets.activities.TimelineActivity"
            android:theme="@style/AppThemeDetails"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zekunwang.happytweets.activities.TimelineActivity" />
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeProfile"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.FollowActivity"
            android:label="@string/title_activity_follow"
            android:parentActivityName="com.zekunwang.happytweets.activities.ProfileActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zekunwang.happytweets.activities.ProfileActivity" />
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="com.zekunwang.happytweets.activities.DirectMessageActivity"
            android:label="@string/title_activity_direct_message"
            android:parentActivityName="com.zekunwang.happytweets.activities.TimelineActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zekunwang.happytweets.activities.TimelineActivity" />
        </activity>
    </application>

</manifest>